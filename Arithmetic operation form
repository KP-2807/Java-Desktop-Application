    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        int num1,num2,sub;
        num1=Integer.parseInt(jTextField3.getText());
        num2=Integer.parseInt(jTextField2.getText());
        sub=num1-num2;
        JOptionPane.showMessageDialog(this, "The Subtraction is:"+sub);
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
         int num1,num2,rem;
        num1=Integer.parseInt(jTextField3.getText());
        num2=Integer.parseInt(jTextField2.getText());
        rem=num1%num2;
        JOptionPane.showMessageDialog(this, "The Modulo is:"+rem);
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         int num1,num2,div;
        num1=Integer.parseInt(jTextField3.getText());
        num2=Integer.parseInt(jTextField2.getText());
        div=num1/num2;
        JOptionPane.showMessageDialog(this, "The Division result is:"+div);
    }                                        

